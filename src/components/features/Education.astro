---
import { GraduationCap } from 'lucide-astro';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import { portfolioData } from '@/data/portfolio';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { education } = portfolioData;
---

<section class="space-y-12" id="education">
    <div class="space-y-2">
        <h2 class="text-3xl font-bold dark:text-white">{t('education.title')}</h2>
        <div class="h-1.5 w-12 bg-primary rounded-full"></div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {education.map((item) => (
            <div class="p-6 bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 shadow-sm hover:shadow-md transition-all">
                <div class="flex items-start gap-4">
                    <div class="p-3 bg-primary/10 rounded-lg">
                        <GraduationCap class="w-6 h-6 text-primary" />
                    </div>
                    <div class="space-y-1">
                        <h3 class="text-xl font-bold text-slate-900 dark:text-white">{item.school}</h3>
                        <p class="text-primary font-medium">{item.degree[lang]}</p>
                        <p class="text-slate-500 dark:text-slate-400 text-sm">{item.period}</p>
                    </div>
                </div>
            </div>
        ))}
    </div>
</section>
